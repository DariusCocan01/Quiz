<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">





    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of France?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/answerGroup1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer1a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="London" />

        <RadioButton
            android:id="@+id/answer1b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Paris" />

        <RadioButton
            android:id="@+id/answer1c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Roma" />
        <RadioButton
            android:id="@+id/answer1d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bucuresti" />
    </RadioGroup>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Italy?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <RadioGroup
        android:id="@+id/answerGroup2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer2a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Roma" />

        <RadioButton
            android:id="@+id/answer2b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Napoli" />

        <RadioButton
            android:id="@+id/answer2c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Georgia" />
        <RadioButton
            android:id="@+id/answer2d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Milan" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Spain?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/answerGroup3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer3a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Barcelona" />

        <RadioButton
            android:id="@+id/answer3b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sevilla" />

        <RadioButton
            android:id="@+id/answer3c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Madrid" />
        <RadioButton
            android:id="@+id/answer3d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Valencia" />
    </RadioGroup>
    <TextView
        android:id="@+id/question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which of the following cities are from Germany?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/Salzburg"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Salzburg" />

        <CheckBox
            android:id="@+id/Berlin"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Berlin" />

        <CheckBox
            android:id="@+id/Wien"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:text="Wien" />

        <CheckBox
            android:id="@+id/Hamburg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburg" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>