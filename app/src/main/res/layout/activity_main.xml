<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">





    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of France?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/answerGroup1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer1a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="London" />

        <RadioButton
            android:id="@+id/answer1b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Paris" />

        <RadioButton
            android:id="@+id/answer1c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Roma" />
        <RadioButton
            android:id="@+id/answer1d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Bucuresti" />
    </RadioGroup>
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Italy?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <RadioGroup
        android:id="@+id/answerGroup2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer2a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Roma" />

        <RadioButton
            android:id="@+id/answer2b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Napoli" />

        <RadioButton
            android:id="@+id/answer2c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Georgia" />
        <RadioButton
            android:id="@+id/answer2d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Milan" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is the capital of Spain?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <RadioGroup
        android:id="@+id/answerGroup3"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/answer3a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Barcelona" />

        <RadioButton
            android:id="@+id/answer3b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sevilla" />

        <RadioButton
            android:id="@+id/answer3c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Madrid" />
        <RadioButton
            android:id="@+id/answer3d"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Valencia" />
    </RadioGroup>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />



    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Confirm" />

</LinearLayout>